<div class="container">
  <div class="searching-annoyance" >
      <%= form_with url: annoyances_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a annoyance" %>
        <%= submit_tag "Search", class: "btn-ghost" %>
      <% end %>
      <br>

  <div class="cards">
    <% @annoyances.order(:name).each do |annoyance| %>
      <div class="cards-annoyance">
        <div>
          <% if annoyance.photo.attached? %>
            <%= cl_image_tag annoyance.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <% image_tag "stock.png" %>
          <% end %>
        </div>
        <div class="cards-annoyance-infos">
          <div>
            <%= link_to annoyance.name, annoyance_path(annoyance) %>
            <br>
            <%= annoyance.category %>
          </div>
          <div>
            <% unless annoyance.rating.nil? %>
            <p></i><%annoyance.rating do %></p>
            <%end%>
            <p class="rating"><%(5-annoyance.rating).to_i.times do %></p>
            <%end%>
          <%end%>
            <br>
             <p class="fa-solid-fa-euro-sign"><%= annoyance.price %> â‚¬ </p>
          </div>
          <div class="annoyance-price-available">
              <% if annoyance[:availability] %>
                <div class="available">
                <%= "Available" %>
                </div>
              <%else%>
                <div class="outofstock" >
                  <%= "Out of stock" %>
                </div>
              <%end%>
          </div>
        </div>
      </div>
    <% end %>
    <br>
    <br>
  </div>
</div>
