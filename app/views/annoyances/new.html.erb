<br>
  <h1>Create new annoyance</h1>
<br>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Create new annoyance</h1>
        <%= simple_form_for @annoyance do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :category, collection: Annoyance::CATEGORIES %>
          <%= f.input :price %>
          <%= f.input :availability %>
          <%= f.input :photo %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<br>
<br>

<%= link_to "Go back", annoyances_path, class: 'btn-ghost' %>
